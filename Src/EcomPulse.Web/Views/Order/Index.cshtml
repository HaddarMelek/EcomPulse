@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<EcomPulse.Web.ViewModel.OrderVM>

@{
    ViewData["Title"] = "Edit Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Orders</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        @foreach (var order in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="@order.Id" />
                        <h5 class="card-title">Order ID: @order.Id</h5>

                        <!-- User Dropdown -->
                        <div class="form-group">
                            <label asp-for="@order.UserId" class="control-label">User</label>
                            <select asp-for="@order.UserId" class="form-control" asp-items="ViewBag.Users"></select>
                            <span asp-validation-for="@order.UserId" class="text-danger"></span>
                        </div>

                        <!-- Total -->
                        <div class="form-group">
                            <label asp-for="@order.Total" class="control-label">Total</label>
                            <input asp-for="@order.Total" class="form-control" />
                            <span asp-validation-for="@order.Total" class="text-danger"></span>
                        </div>

                        <!-- Order Date -->
                        <div class="form-group">
                            <label asp-for="@order.OrderDate" class="control-label">Order Date</label>
                            <input asp-for="@order.OrderDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="@order.OrderDate" class="text-danger"></span>
                        </div>

                        <!-- Shipping Address -->
                        <div class="form-group">
                            <label asp-for="@order.ShippingAddress" class="control-label">Shipping Address</label>
                            <input asp-for="@order.ShippingAddress" class="form-control" />
                            <span asp-validation-for="@order.ShippingAddress" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="form-group">
                            <label asp-for="@order.Status" class="control-label">Status</label>
                            <select asp-for="@order.Status" class="form-control">
                                <option value="Pending" @(order.Status == "Pending" ? "selected" : "")>Pending</option>
                                <option value="Processing" @(order.Status == "Processing" ? "selected" : "")>Processing</option>
                                <option value="Completed" @(order.Status == "Completed" ? "selected" : "")>Completed</option>
                                <option value="Cancelled" @(order.Status == "Cancelled" ? "selected" : "")>Cancelled</option>
                            </select>
                            <span asp-validation-for="@order.Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Save Changes" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
