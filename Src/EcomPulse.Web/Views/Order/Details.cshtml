@model EcomPulse.Web.ViewModel.OrderVM

@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Order Details</h1>

<div>
    <h4>Order Information</h4>
    <hr />
    <dl class="row">
        <!-- User Information -->
        <dt class="col-sm-2">
            User Name
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>

        <!-- Total -->
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Total
        </dd>

        <!-- Order Date -->
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.OrderDate.ToString("yyyy-MM-dd")
        </dd>

        <!-- Shipping Address -->
        <dt class="col-sm-2">
            Shipping Address
        </dt>
        <dd class="col-sm-10">
            @Model.ShippingAddress
        </dd>

        <!-- Status -->
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
