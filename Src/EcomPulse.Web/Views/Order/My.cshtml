@model List<EcomPulse.Web.ViewModel.OrderVM>

<h1>My Orders</h1>

@if (Model == null || !Model.Any())
{
    <p>No orders found.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Total</th>
            <th>Date</th>
            <th>Status</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Total</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.Status</td>
                <td>@order.ShippingAddress</td>
                <td>
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"
                       class="btn btn-primary">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
